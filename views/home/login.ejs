<form method="post" action="./">
	<div id="main">
        <div id="CircleLogo"><img alt="CircleLogo" src="/imagens/icts_circle.SVG"/></div>

        <div id="texto1">
            Acesse sua área de contribuinte
        </div>

        <div id="texto2">
                    ou <b>crie uma conta</b> caso ainda não tenha se registrado.
        </div>

		<div class="panel <%= (mensagem ? 'panel' : 'panel-default' ) %>">	
      <div class="panel-heading">
				<div id="panel-heading-img">
					<img id="Logo" alt="Logo" src="/imagens/ICTS.SVG"/>
                    <img id="BlueCircle" alt="BlueCircle" src="/imagens/icts_circle_blue.SVG"/>
                    <img id="MyProtiviti" alt="MyProtiviti" src="/imagens/myprotiviti.SVG";/>
				</div>
			</div>
			
      <div class="panel-body">
				<div id="divUser" class="form-group" style="color:#666666">
					<label for="login">Usuário:</label>
                    <img alt="Login" src="/imagens/login.SVG" height="auto" width="20px" style="position: relative; left: -40px; top: 38px;"/>
					<input name="login" type="text" id="login" class="form-control text-uppercase" spellcheck="false" />
				</div>

				<div id="divPass" class="form-group" style="color:#666666">
					<label for="senha">Senha:</label>
                    <img alt="Senha" src="/imagens/password.SVG" height="auto" width="18px" style="position: relative; left: -30px; top: 37px;"/>
					<input name="senha" type="password" id="senha" class="form-control" />
				</div>
				
        <% if (mensagem) { %>
				<div id="lblMessage" class="alert"><%=mensagem %></div>
				<% } %>
			</div>
			
      <div class="panel-footer">
				<input type="submit" value="Entrar" class="btn btn-primary btn-lg btn-block" />
            <div style="text-align: center;  padding: 15px 0px 40px 0px">
                <b><a style ="color: #545455" href=" ">Esqueceu sua senha?</a></b>
            </div>
			</div>
		</div>
	</div>
</form>

