
<div class="row">
	<div class="col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
		<form id="form" class="panel panel-default" action="#">
			<div class="panel-heading">Criar Nova Parceria</div>
			<div class="panel-body no-bottom">
				
				<div class="form-group">
					<label for="empresa">Nome da empresa parceira</label>
          <select id="empresa" name="empresa" class="form-control" size="1">
            <option value="">SELECIONE...</option>
            <option value="">Empresa 1</option>
            <option value="">Empresa 2</option>
            <option value="">Empresa 3</option>
          </select>
				</div>

        <div class="form-group">
          <label for="solucao">Soluções</label>
          <select id="solucao" name="solucao" class="form-control" size="1">
            <option value="">SELECIONE...</option>
            <option value="">Transformação digital</option>
            <option value="">Cultura e Comportamento Ético</option>
            <option value="">LGPD/ GDPR</option>
          </select>
        </div>

        <div class="form-group">
          <label for="pursuitTeam">Time responsável pela parceria</label>
          <select id="pursuitTeam" name="pursuitTeam" class="form-control" size="1">
            <option value="">SELECIONE...</option>
            <option value="">Equipe 1</option>
            <option value="">Equipe 2</option>
            <option value="">Equipe 3</option>
          </select>
        </div>
        
        <div class="form-group">
          <label for="valorAgregado">Valor agregado ao negócio</label>
          <textarea class="form-control" rows="5"  id="porqueVencemos" name="porqueVencemos" spellcheck="true"></textarea>
        </div>

      </div>
			<div class="panel-footer">
				<input value="Criar" class="btn btn-primary btn-lg btn-block" type="submit" />
			</div>

		</form>
	</div>
</div>

<%- contentFor("scripts") %>
<script type="text/javascript">
	//<![CDATA[
	"use strict";

	$("#form").validate({
		rules: {
			empresa: {
				require: true
			},

			solucao: {
				required: true
			},

			pursuitTeam: {
				required: true
			},

			valorAgregado: {
				maxlength: 250
			},
		},


		submitHandler: function (form) {
			if (JsonWebApi.active)
				return;

			Notification.wait();

			//<% if (item) { %>

			JsonWebApi.postFormData("/api/parceria/alterar", form, function (response) {
				if (response.success)
					Notification.success("Parceria alterado com sucesso! \uD83D\uDE04");
				else
					Notification.error(response.value, true);
			});

			//<% } else { %>

			// Instancia um FormData porque precisamos enviar o arquivo, senão, poderia passar
			// apenas o form, como é o caso do alterar.
			JsonWebApi.postFormData("/api/parceria/criar", new FormData(form), function (response) {
				if (response.success) {
					form.reset();
					$("#form").validate().resetForm();
					Notification.success("Parceria criada com sucesso! \uD83D\uDE04");
				} else {
					Notification.error(response.value, true);
				}
			});

			//<% } %>
		}
	});
	//]]>
</script>


